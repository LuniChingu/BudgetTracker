<Window x:Class="BudgetTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sharp="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Title="MainWindow" Height="600" Width="920">
    
    <Border Background="LavenderBlush"
            CornerRadius="20">
        <Grid ShowGridLines="True">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" CornerRadius="10,0,0,10">
                
            </Border>
            
            <!--Main Section-->
            <Border Grid.Column="1" Background="DarkSlateBlue" CornerRadius="0,10,10,0">
                <Grid ShowGridLines="True">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel x:Name="pnlControlBar" Grid.Row="0"
                                Orientation="Horizontal" FlowDirection="RightToLeft"
                                Margin="0,0,5,0"
                                Background="Transparent"
                                MouseDown="UpperBar_MouseDown">
                        <Button x:Name="btnClose" 
                                Style="{StaticResource UpperBarBtn}"
                                Click="btnClose_Click">
                            <sharp:IconImage Icon="Xmark"
                                             Foreground="AliceBlue"
                                             Style="{StaticResource BarButtonIcon}"/>
                        </Button>
                        <Button x:Name="btnMinimize" 
                                Style="{StaticResource UpperBarBtn}"
                                Click="btnClose_Click">
                            <sharp:IconImage Icon="WindowMinimize"
                                             Foreground="AliceBlue"
                                             IconFont="Solid"
                                             Width="12"
                                             Style="{StaticResource BarButtonIcon}"/>
                        </Button>
                    </StackPanel>
                    
                    <!--Content Section / Child Views-->
                    <ContentControl Content=""
                                    Grid.Row="2"
                                    Margin="25"/>
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                </Grid>
            </Border>    
        </Grid>
    </Border>
</Window>
