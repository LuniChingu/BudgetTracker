<Window x:Class="BudgetTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="300" />
        </Grid.RowDefinitions>
        
        <GroupBox Header="Add New Transaction" Grid.Row="0" Padding="10" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <TextBlock Text="Name: " FontWeight="Bold"/>
                    <TextBox x:Name="txtName" Height="25" Margin="0,5,0,0"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Margin="0,0,10,0">
                    <TextBlock Text="Date: " FontWeight="Bold"/>
                    <DatePicker x:Name="dpDate" Height="25" Margin="0,5,0,0"/>
                </StackPanel>
                
                <StackPanel Grid.Column="2" Margin="0,0,10,0">
                    <TextBlock Text="Amount: " FontWeight="Bold"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox x:Name="txtAmount" Grid.Column="0" Height="25" Margin="0,5,0,0"/>
                        <ComboBox Grid.Column="1" x:Name="cmbCurrency" Height="25" Width="70" Margin="5,5,0,0">
                            <ComboBoxItem Content="NIS" IsSelected="True"/>
                            <ComboBoxItem Content="USD"/>
                            <ComboBoxItem Content="EUR"/>
                            <ComboBoxItem Content="GBP"/>
                            <ComboBoxItem Content="JPY"/>
                        </ComboBox>
                    </Grid>
                </StackPanel>
                
                <StackPanel Grid.Column="3">
                    <TextBlock Text="Category: " FontWeight="Bold"/>
                    <ComboBox x:Name="cmbCategory" Height="25" Margin="0,5,0,0">
                        <ComboBoxItem Content="Bills" IsSelected="True"/>
                        <ComboBoxItem Content="Transport"/>
                        <ComboBoxItem Content="Entertainment"/>
                        <ComboBoxItem Content="Health"/>
                        <ComboBoxItem Content="Shopping"/>
                        <ComboBoxItem Content="Food"/>
                        <ComboBoxItem Content="Other"/>
                    </ComboBox>
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
