<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sharp="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp">
    
    <!--Control Panel button-->
    <Style x:Key="UpperBarBtn" TargetType="Button">
        <Setter Property="Width" Value="25"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="4">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="CornflowerBlue"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <Style x:Key="BarButtonIcon" TargetType="sharp:IconImage">
        <Setter Property="Width" Value="9"/>
        <Setter Property="Height" Value="9"/>
    </Style>
    
    <!--Radio Button as Side Menu tab select-->
    <Style x:Key="SideMenuRadioButton" TargetType="RadioButton">
        <Setter Property="Height" Value="35"/>
        <Setter Property="Foreground" Value="AliceBlue"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Border x:Name="border"
                            Background="DarkSlateBlue"
                            BorderThickness="0"
                            CornerRadius="8">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="False">
                            <Setter TargetName="border" Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="AliceBlue"/>
                            <Setter Property="FontWeight" Value="Regular"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="DarkSlateGray"/>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="border" Property="Background" Value="CornflowerBlue"/>
                            <Setter Property="Foreground" Value="AliceBlue"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                        </Trigger>
                        
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!--Generic Button Style-->
    <Style x:Key="GenericBtn" TargetType="Button">
        <Setter Property="Background" Value="DarkSlateBlue"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Width" Value="100"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="4">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="CornflowerBlue"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!--GroupBox Style-->
    <Style x:Key="GenericGroupBox" TargetType="GroupBox">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="GroupBox">
                    <Grid Background="Transparent">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <Border Grid.Row="0" BorderBrush="DarkSlateGray" Background="#1f1f24"
                                BorderThickness="2,2,2,0" CornerRadius="8,8,0,0">
                            <Label Foreground="White">
                                <ContentPresenter ContentSource="Header" Margin="5"/>
                            </Label>
                        </Border>
                        <Border Grid.Row="1" BorderThickness="2,0,2,2" BorderBrush="DarkSlateGray" 
                                Background="#1f1f24" CornerRadius="0,0,8,8">
                            <ContentPresenter Margin="5"/>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!--ComboBox style-->
    <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBox">
                    
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!--Transactions DataGrid Style-->
    <Style x:Key="TransactionsStyle" TargetType="DataGrid">
        
    </Style>
    
</ResourceDictionary>